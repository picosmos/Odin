<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Odin</title>
    <style>
        html {
            font-size: 14px;
        }

        @@media
        (min-width: 768px) {
            html {
                font-size: 16px;
            }
        }

        .btn:focus,
        .btn:active:focus,
        .btn-link.nav-link:focus,
        .form-control:focus,
        .form-check-input:focus {
            box-shadow: 0 0 0 0.1rem white, 0 0 0 0.25rem #258cfb;
        }

        html {
            position: relative;
            min-height: 100%;
        }

        body {
            margin-bottom: 60px;
        }

        nav li {
            list-style: none;
        }

        table {
            border-spacing: 0px;
            border-collapse: collapse;
        }

        table tr td,
        table tr th {
            border: 1px solid #555555;
            padding: 2px 5px;
            vertical-align: top;
        }
    </style>
</head>

<body>
    <header>
        <nav>
            <li><a asp-controller="Home" asp-action="Index">Table Index</a></li>
        </nav>
    </header>
    @RenderBody()

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>